<%-messages() %>

<div class="row">
    <div class="col-lg-6">

        <%-field_group_start('dataUrl') %>
        <%-label_for('api','dataUrl', {label: 'Data URL'}) %>
        <div class="col-lg-8">
            <%-text_field_for('api','dataUrl', api.dataUrl, { placeholder: 'Data URL', required: true }) %>
            <span class="help-block">The URL of the API within iJento.</span>
        </div>
        <button class="btn btn-primary" type="button" id="grab_api_url">Grab.</button>
        <%-field_group_end() %>

        <%-form_field('text', 'api', 'title', api.title, {label: 'Title', placeholder: 'Title', required: true, help: 'Give the API a name.'}) %>

        <%-form_field('textarea', 'api', 'description', api.description, {label: 'Description', placeholder: 'Description', help: 'What the API does.'}) %>

        <%-form_field('text', 'api', 'url', api.url, {label: 'API URL', placeholder: 'API URL', required: true, help: 'The URL of the API.'}) %>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <fieldset>
                <legend>Columns</legend>

                <div id="api_columns">
                    <% if (api.columns.length > 0) { %>
                    <% api.columns.forEach(function(column) { %>
                    <label class="checkbox">
                        <input type="checkbox" name="api[columns][]" value="<%=column.name %>" checked="checked"> <%=column.name %>
                    </label>
                    <% }); %>
                    <% } else { %>
                    <p class="muted">(Try grabbing the URL first!)</p>
                    <% } %>
                </div>

                <div class="form-inline input-append">
                    <div class="col-lg-8">
                    <label for="api_new_column" class="inline hide">New column</label>
                    <input type="text" id="api_new_column" class="form-control" name="api[new_column]" placeholder="New column" />
                        </div>
                    <button class="btn btn-default" type="button">Add</button>
                </div>
            </fieldset>
        </div>
    </div>
</div>