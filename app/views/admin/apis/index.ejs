<% include ../../layout/header %>

<div class="page-header">
    <h1>APIs</h1>
</div>

<p><a href="<%=relative_url('new') %>" class="btn btn-primary">New API</a></p>

<% if (apis.length > 0) { %>
<% apis.forEach(function (api) { %>
<div class="well">
    <h2><%-link_to(req.url, api, api.title) %></h2>
    <p><%-format(api.description) %></p>
</div>
<% }) %>

<p><a href="<%=relative_url('new') %>" class="btn btn-primary">New API</a></p>
<% } else { %>
<div class="alert alert-info">No API&rsquo;s found.</div>
<% } %>

<% include ../../layout/footer %>