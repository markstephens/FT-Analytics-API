<% include ../../layout/header %>

<div class="page-header">
    <h1>Edit <%-link_to('/admin/apis', api, api.title) %></h1>
</div>

<form action="/admin/apis/<%=api._id%>/edit" method="post" class="form-horizontal">
    <%-csrf() %>
    <input type="hidden" name="_method" value="PUT"/>

    <fieldset>
        <legend>Update API</legend>

        <% include _form %>

        <div class="form-actions">
            <p><button type="submit" class="btn btn-success">Update API</button></p>
            <p><a href="/admin/apis/<%=api._id%>" class="btn btn-danger btn-mini">Back</a></p>
        </div>

    </fieldset>
</form>



<% include ../../layout/footer %>